            <th onclick="sortTable(0, 'str')">Legajo</th>
            <th onclick="sortTable(1, 'str')">Nombre y Apellido</th>
            <th onclick="sortTable(3, 'str')">Dni</th>
            <th>Acciones</th>
        </thead>
        <tbody id="tablalumnos" class="text-center">
            {{#each usuarios}}
            <tr>
                <td>{{ legajo}}</td>
                <td>{{nombre}} {{apellido}}</td>
                <td>{{dni}}</td>
                <td>
                    <a type="button" class="btn btn-success" href="informacionalumno/{{legajo}}">ver</a>
                    <a type="button" class="btn btn-primary" href="editaralumno/{{legajo}}">Editar</a>
